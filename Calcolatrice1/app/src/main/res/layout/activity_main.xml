<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cassanellicarlo.myapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/numero"
        android:layout_width="244dp"
        android:layout_height="59dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/aggiungi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:textSize="24sp"
        android:onClick="eval"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/numero"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/sottrai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1"
        android:textSize="24sp"
        android:onClick="eval"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/numero"
        app:layout_constraintLeft_toRightOf="@+id/aggiungi"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <Button
        android:id="@+id/moltiplica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x2"
        android:textSize="24sp"
        android:onClick="eval"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/aggiungi"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/eleva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="^2"
        android:textSize="24sp"
        android:onClick="eval"
        android:layout_marginTop="-53dp"
        app:layout_constraintTop_toBottomOf="@+id/sottrai"
        app:layout_constraintLeft_toRightOf="@+id/moltiplica"
        android:layout_marginLeft="-80dp"
        android:layout_marginStart="24dp" />
</android.support.constraint.ConstraintLayout>
