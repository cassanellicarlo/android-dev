<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cassanellicarlo.myapplication.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="336dp"
        android:layout_height="463dp"
        tools:context="cassanellicarlo.myapplication.MainActivity"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="24dp">

        <EditText
            android:id="@+id/numero"
            android:layout_width="244dp"
            android:layout_height="59dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="number"
            android:text="0"
            android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="70dp" />

        <Button
            android:id="@+id/aggiungi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="+1"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/numero"
            tools:layout_editor_absoluteX="70dp" />

        <Button
            android:id="@+id/sottrai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:text="-1"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/aggiungi"
            app:layout_constraintTop_toBottomOf="@+id/numero"
            android:layout_marginStart="24dp" />

        <Button
            android:id="@+id/moltiplica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="x2"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/aggiungi"
            tools:layout_editor_absoluteX="70dp" />

        <Button
            android:id="@+id/eleva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:text="^2"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/moltiplica"
            app:layout_constraintTop_toBottomOf="@+id/sottrai"
            android:layout_marginStart="24dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
